{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2019",
    "module": "ES2020",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "es2019",
      "es2020",
      "ESNext",
      "dom"
    ],
    "strict": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": [
      "node_modules/@types"
    ],
  },
  "include": [
    "test/**/*",
    "src/**/*",
  ],
  "exclude": [
    "examples",
    "dist",
    "tools",
    ".history",
    "node_modules",
  ]
}
